<div class="success-contents">

  <div class="left-contents">
    <h4>情緒的喚起一覧</h4>

    <p class="successes-lists">
      <% @emotions.each do |emotion| %>
        <p class="success-list">
          <%= emotion.title %>
          <%= emotion.user.nickname %>
          <%= emotion.created_at %>
        </p>
      <% end %>
    </p>    
  </div>

  <div class="right-contents">
    <h4>情緒的喚起投稿</h4>
    <div class="success-form">
      <%= form_with(model: [@user, @emotion], local: true) do |f| %>

        <div class="success-title">タイトル</div>
        <%= f.text_area :title, class: "", placeholder: "例）私が情緒的喚起できること" %>
        <div class="success-text">内容</div>
        <%= f.text_area :text, class: "", placeholder: "あなたが情緒的喚起できることを投稿しましょう！！" %>

        <div class="success-btn">
          <%= f.submit "投稿", class: "" %>
        </div>

      <% end %>
    </div>
  </div>
</div>