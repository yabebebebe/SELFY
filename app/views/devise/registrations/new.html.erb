<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, class: "", local: true do |f| %>

  <div class="form-wrap">
  
    <div class="sign-up-title">
      ユーザー情報入力
    </div>

    <%#= render "shared/error_messages", moder: @user %>
    
    <div class="form-group">
      <label class="form-label">プロフィール画像</label>
      <div class="user-image">
        <p>ファイルから画像をアップロード</p>
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="form-group">
      <label class="form-label">ユーザー名</label>
      <%= f.text_area :nickname, class: "", placeholder: "例）やべっち", maxlength: "20" %>
    </div>

    <div class="form-group">
      <label class="form-label">メールアドレス</label>
      <%= f.email_field :email, class: "", placeholder: "例）yabe@email" %>
    </div>

    <div class="form-group">
      <label class="form-label">パスワード</label>
      <%= f.password_field :password, class: "", placeholder: "半角英数字混合（６文字以上）" %>
    </div>

    <div class="form-group">
      <label class="form-label">パスワード（確認用）</label>
      <%= f.password_field :password_confirmation, class: "", placeholder: "同じものを入力" %>
    </div>


    <div class="form-group">
      <label class="form-label">本名（漢字・フルネーム）</label>
      <%= f.text_area :name, class: "", placeholder: "例）矢部 弘夢" %>
    </div>

    <div class="form-group">
      <label class="form-label">生年月日</label>
      <%= f.text_area :hoge, class: "", placeholder: "1997/10/7" %>
    </div>

    <div class="form-group">
      <label class="form-label">電話番号</label>
      <%= f.text_field :phone, class: "", placeholder: "例）09000000000", maxlength: "11" %>
    </div>


    <div class="user-new">
      <%= f.submit "新規登録", class: "" %>
    </div>

  </div>

<% end %>
