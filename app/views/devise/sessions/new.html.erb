<%= render "shared/header" %>

<%= form_with model: @user, url: user_session_path, class: "", local: true do |f| %>

  <div class="form-wrap">

    <div class="login-title">
      ユーザー情報入力
    </div>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

    <div class="form-group">
      <label class="form-label">メールアドレス</label>
      <%= f.email_field :email, class: "", placeholder: "例）yabe@email" %>
    </div>

    <div class="form-group">
      <label class="form-label">パスワード</label>
      <%= f.password_field :password, class: "", placeholder: "半角英数字混合（６文字以上）" %>
    </div>

    <div class="login-btn">
      <%= f.submit "ログイン", class: "" %>
    </div>

  </div>

<% end %>