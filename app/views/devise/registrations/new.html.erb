<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, class: "registrations-form", local: true do |f| %>

  <div class="form-wrap">
  
    <div class="sign-up-title">
      ユーザー情報入力
    </div>

    <%= render "shared/error_messages", model: @user %>
    <p><span style="color: red;">*</span> は入力必須</p>
    
    <div class="form-group">
      <label class="form-label">プロフィール画像 <span style="color: red;">*</span></label>
      <div class="image-upload">
        <p>ファイルから画像をアップロード</p>
        <%= f.file_field :image, class:"user-image" %>
      </div>

      <div id="image-list">
        
      </div>

    </div>

    <div class="form-group">
      <label class="form-label">ユーザー名 <span style="color: red;">*</span></label>
      <%= f.text_field :nickname, class: "registrations-field", placeholder: "例）やべっち", maxlength: "20" %>
    </div>

    <div class="form-group">
      <label class="form-label">メールアドレス <span style="color: red;">*</span></label>
      <%= f.email_field :email, class: "registrations-field", placeholder: "例）yabe@email" %>
    </div>

    <div class="form-group">
      <label class="form-label">パスワード <span style="color: red;">*</span></label>
      <%= f.password_field :password, class: "registrations-field", placeholder: "半角英数字混合（６文字以上）" %>
    </div>

    <div class="form-group">
      <label class="form-label">パスワード（確認用 <span style="color: red;">*</span></label>
      <%= f.password_field :password_confirmation, class: "registrations-field", placeholder: "同じものを入力" %>
    </div>


    <div class="form-group">
      <label class="form-label">本名（フルネーム・スペース無 <span style="color: red;">*</span></label>
      <%= f.text_field :name, class: "registrations-field", placeholder: "例）矢部弘夢" %>
    </div>

    <div class="form-group">
      <label class="form-label">生年月日 <span style="color: red;">*</span></label>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>  
    </div>

    <div class="form-group">
      <label class="form-label">電話番号 <span style="color: red;">*</span></label>
      <%= f.text_field :phone, class: "registrations-field", placeholder: "例）09000000000", maxlength: "11" %>
    </div>


    <div class="user-new">
      <%= f.submit "新規登録", class: "registrations-submit" %>
    </div>

  </div>

<% end %>

<%= render "shared/footer" %>
